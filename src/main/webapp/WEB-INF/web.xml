<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--    6.在web项目的核心配置文件web.xml中配置访问servlet的路径。-->
    <servlet>
        <servlet-name>HelloWorldServlet</servlet-name>
        <servlet-class>com.cai.sh.a_servlet_01.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LifeDemo01Servlet</servlet-name>
        <servlet-class>com.cai.sh.b_servlet_02.LifeDemo01Servlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Demo02Servlet</servlet-name>
        <servlet-class>com.cai.sh.b_servlet_02.Demo02Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Demo03Servlet</servlet-name>
        <servlet-class>com.cai.sh.b_servlet_02.Demo03Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PathDemo01Servlet</servlet-name>
        <servlet-class>com.cai.sh.c_servlet_03.PathDemo01Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PathDemo02Servlet</servlet-name>
        <servlet-class>com.cai.sh.c_servlet_03.PathDemo02Servlet</servlet-class>
    </servlet>
      <servlet>
        <servlet-name>PathDemo03Servlet</servlet-name>
        <servlet-class>com.cai.sh.c_servlet_03.PathDemo03Servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloWorldServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LifeDemo01Servlet</servlet-name>
        <url-pattern>/life</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Demo02Servlet</servlet-name>
        <url-pattern>/demo02</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Demo03Servlet</servlet-name>
        <url-pattern>/demo03</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PathDemo01Servlet</servlet-name>
        <url-pattern>/Path01</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PathDemo02Servlet</servlet-name>
        <url-pattern>/Path02/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PathDemo03Servlet</servlet-name>
        <url-pattern>*.liuyan</url-pattern>
    </servlet-mapping>
</web-app>